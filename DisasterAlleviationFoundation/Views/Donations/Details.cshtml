@model DisasterAlleviationFoundation.Models.Donation
@{
    ViewData["Title"] = "Donation Details";
}

<h2>Donation Details</h2>
<hr />

<dl class="row">
    <dt class="col-sm-3">Donor</dt>
    <dd class="col-sm-9">@Model.DonorName (@Model.DonorEmail)</dd>

    <dt class="col-sm-3">Type</dt>
    <dd class="col-sm-9">@Model.Type</dd>

    <dt class="col-sm-3">Quantity</dt>
    <dd class="col-sm-9">@Model.Quantity</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">Notes</dt>
    <dd class="col-sm-9">@Model.Notes</dd>

    <dt class="col-sm-3">Created</dt>
    <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
</dl>

<p class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</p>
