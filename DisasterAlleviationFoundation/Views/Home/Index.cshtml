@{
    ViewData["Title"] = "Welcome";
}

<section class="py-4">
    <div class="p-4 p-md-5 mb-4 glass rounded-4">
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold mb-2">Disaster Alleviation Foundation</h1>
                <p class="lead mb-4 text-light-200">
                    Report incidents, coordinate donations, and mobilize volunteers fast.
                    This portal helps communities respond and recover together.
                </p>

                <div class="d-flex flex-wrap gap-2">
                    <a asp-controller="Incidents" asp-action="Index" class="btn btn-cta btn-lg">View Incidents</a>
                    <a asp-controller="Donations" asp-action="Index" class="btn btn-ghost btn-lg">Donate Resources</a>
                    <a asp-controller="Volunteers" asp-action="Tasks" class="btn btn-ghost btn-lg">Volunteer</a>
                </div>

                @if (!(User.Identity?.IsAuthenticated ?? false))
                {
                    <div class="mt-3">
                        <small class="text-light-200">New here?</small>
                        <a asp-controller="Account" asp-action="Register" class="ms-1 link-light">Create an account</a>
                        <span class="text-light-200">·</span>
                        <a asp-controller="Account" asp-action="Login" class="ms-1 link-light">Log in</a>
                    </div>
                }
            </div>

            <div class="col-lg-5">
                <div class="glass p-4 rounded-4 h-100">
                    <h5 class="mb-3">How it works</h5>
                    <ul class="mb-0">
                        <li class="mb-2"><strong>Report</strong> local incidents (floods, fires, outages, access issues).</li>
                        <li class="mb-2"><strong>Donate</strong> food, clothing, and medical supplies to active needs.</li>
                        <li class="mb-2"><strong>Volunteer</strong> for tasks and track your contributions.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
