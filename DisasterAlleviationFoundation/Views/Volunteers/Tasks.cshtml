@model IEnumerable<DisasterAlleviationFoundation.Models.VolunteerTask>
@{
    ViewData["Title"] = "Volunteer Tasks";
}
<h2>Volunteer Tasks</h2>
<p><a class="btn btn-primary" asp-action="CreateTask">Create Task</a></p>
@if (!Model.Any())
{
    <div class="alert alert-info">No tasks yet.</div>
}
else
{
    <table class="table table-striped">
        <thead><tr><th>Title</th><th>When</th><th>Location</th><th>Slots</th><th></th></tr></thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Title</td>
                    <td>@(t.ScheduledAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                    <td>@t.Location</td>
                    <td>@t.Slots</td>
                    <td>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <a class="btn btn-sm btn-outline-primary" asp-action="SignUp" asp-route-id="@t.Id">Sign Up</a>
                        }
                        else
                        {

                            <a class="btn btn-sm btn-outline-primary" asp-controller="Account" asp-action="Login" asp-route-returnUrl="/Volunteers/Tasks">Sign In to Join</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
