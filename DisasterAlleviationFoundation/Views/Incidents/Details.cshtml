@model DisasterAlleviationFoundation.Models.Incident
@{
    ViewData["Title"] = "Incident Details";
}

<h2>@Model.Title</h2>

<div class="mb-3">
    <strong>Location:</strong> @Model.Location
</div>
<div class="mb-3">
    <strong>Occurred:</strong> @Model.OccurredAt.ToString("yyyy-MM-dd HH:mm")
</div>
<div class="mb-3">
    <strong>Severity:</strong>
    <span class="badge text-bg-secondary">@Model.Severity</span>
</div>
<div class="mb-3">
    <strong>Status:</strong>
    <span class="badge text-bg-secondary">@Model.Status</span>
</div>
<div class="mb-3">
    <strong>Description:</strong>
    <p class="mb-0">@Model.Description</p>
</div>

<p class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary ms-2">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger ms-2">Delete</a>
    }
</p>
